<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.illinois.cs498.soccershotrecorder">

    <application
        android:allowBackup="true"
        android:installLocation="preferExternal"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="edu.illinois.cs498.soccershotrecorder.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FirstTimeDialogActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlayerListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="edu.illinois.cs498.soccershotrecorder.RecordFieldActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="edu.illinois.cs498.soccershotrecorder.FieldSummaryActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="edu.illinois.cs498.soccershotrecorder.GameSummaryActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
